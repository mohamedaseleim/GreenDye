# Server Configuration
NODE_ENV=development
PORT=5000
API_URL=http://localhost:5000

# Database
MONGODB_URI=mongodb://localhost:27017/greendye
MONGODB_TEST_URI=mongodb://localhost:27017/greendye_test

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=30d
JWT_COOKIE_EXPIRE=30

# Email Configuration (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
FROM_EMAIL=noreply@greendye-academy.com
FROM_NAME=GreenDye Academy

# File Upload Configuration
MAX_FILE_SIZE=10485760
FILE_UPLOAD_PATH=./uploads

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Payment Gateway Configuration
# Stripe (International)
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLIC_KEY=pk_test_your_stripe_public_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# PayPal (International)
PAYPAL_CLIENT_ID=your_paypal_client_id
PAYPAL_CLIENT_SECRET=your_paypal_client_secret
PAYPAL_MODE=sandbox

# Fawry (Egypt)
FAWRY_MERCHANT_CODE=your_fawry_merchant_code
FAWRY_SECURITY_KEY=your_fawry_security_key
FAWRY_API_URL=https://atfawry.fawrystaging.com

# Paymob (Egypt/MENA)
PAYMOB_API_KEY=your_paymob_api_key
PAYMOB_INTEGRATION_ID=your_paymob_integration_id
PAYMOB_IFRAME_ID=your_paymob_iframe_id

# AWS S3 (Optional - for cloud storage)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BUCKET_NAME=
AWS_REGION=

# Video Streaming (Optional)
VIDEO_STORAGE_PATH=./uploads/videos
VIDEO_CHUNK_SIZE=1048576

# Security
BCRYPT_ROUNDS=10
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Socket.io
SOCKET_CORS_ORIGIN=http://localhost:3000
